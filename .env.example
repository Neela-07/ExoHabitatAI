# ExoHabitatAI Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# Option 1: Full connection URL (recommended for cloud deployment)
DATABASE_URL=postgresql://user:password@localhost:5432/exohabitat

# Option 2: Individual settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exohabitat
DB_USER=postgres
DB_PASSWORD=your-password

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Optional: ML Model Settings
MODEL_TYPE=xgboost
